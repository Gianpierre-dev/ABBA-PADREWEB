      <!-- Cart and Mobile Menu -->
      <div class="flex items-center space-x-4">
        <!-- Cart Button -->
        <button id="cart-button" class="relative p-2 text-gray-700 hover:text-pink-500 transition-colors">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4m2.6 8L6 6H2m5 7v6a2 2 0 002 2h6a2 2 0 002-2v-6m-6-2h2"></path>
